<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <!--总体布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--顶部固定-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <!--轮播图-->

            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lib1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lib2" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lib3" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lib4" />
            </ViewFlipper>
        </LinearLayout>
        <!--中间部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <!--列表-->

                <ListView
                    android:id="@+id/homelist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#00000000"
                    android:dividerHeight="30dp">
                </ListView>
        </LinearLayout>
        <!--底部部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/home"
                android:layout_width="101dp"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/home"
                android:text="首页" />

            <Button
                android:id="@+id/reservation"
                android:layout_width="101dp"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/reservation"
                android:text="预约" />

            <Button
                android:id="@+id/comment"
                android:layout_width="101dp"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/comment"
                android:text="讨论" />

            <Button
                android:id="@+id/my"
                android:layout_width="101dp"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/my"
                android:text="我的" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>