<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taolun"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <ListView android:id="@+id/myListview" android:layout_width="match_parent" android:layout_height="wrap_content"> </ListView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="20dp">
        <EditText android:id="@+id/xiepinglun" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" android:gravity="center"/>
        <Button android:id="@+id/insert" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="发表"/>
    </LinearLayout>

</LinearLayout>